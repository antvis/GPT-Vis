{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number"
          },
          "text": {
            "type": "string"
          }
        },
        "required": ["text", "value"]
      },
      "description": "Data for word cloud chart, such as, [{ value: '4.272', text: '形成' }]."
    },
    "width": {
      "type": "number",
      "description": "Set the width of chart, default is 600.",
      "default": 600
    },
    "height": {
      "type": "number",
      "description": "Set the height of chart, default is 400.",
      "default": 400
    },
    "title": {
      "type": "string",
      "default": "",
      "description": "Set the title of chart."
    },
    "theme": {
      "default": "default",
      "description": "Set the theme of chart.",
      "type": "string"
    }
  },
  "required": ["data"]
}
